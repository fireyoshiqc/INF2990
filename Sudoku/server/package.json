{
  "name": "sudoku-service",
  "version": "1.0.0",
  "description": "Le projet Sudoku pour le cours LOG2990 de la session H2017",
  "scripts": {
    "start": "tsc && concurrently --kill-others \"tsc -w \" \"nodemon out/www.js\" ",
    "lint": "tslint app/**/*.ts app/*.ts --force -t verbose",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "clean": "rimraf out node_modules",
    "postinstall": "rimraf false",
    "update:packages": "node wipe-dependencies.js && rm -rf node_modules && npm update --save-dev && npm update --save",
    "test": "tsc && mocha out/**/*.spec.js -R spec -c -u exports --harmony",
    "coverage": "tsc && nyc --require ts-node/register _mocha -c -R spec -- out/**/*.js",
    "nyan-coverage": "tsc && nyc --require ts-node/register _mocha -c -R nyan -- out/**/*.js"
  },
  "nyc":{
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "mocha":{
    "colors": true
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "concurrently": "3.1.0",
    "cookie-parser": "^1.4.3",
    "debug": "^2.6.0",
    "express": "^4.14.0",
    "mongoose": "^4.7.6",
    "morgan": "^1.7.0",
    "serve-favicon": "^2.3.2",
    "systemjs": "^0.19.41"    
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.36",
    "@types/mongoose": "^4.7.2",
    "@types/cookie-parser": "^1.3.30",
    "@types/debug": "0.0.29",
    "@types/express": "^4.0.34",
    "@types/morgan": "^1.7.32",
    "@types/node": "^6.0.56",
    "@types/serve-favicon": "^2.2.28",
    "nodemon": "^1.11.0",
    "tslint": "^4.2.0",
    "tslint-eslint-rules": "^3.2.3",
    "typescript": "^2.1.4",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "ts-node": "^2.1.0",
    "remap-istanbul": "^0.8.4",
    "rimraf": "^2.5.4"
  }
}
